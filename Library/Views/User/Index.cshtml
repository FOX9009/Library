@model IEnumerable<Library.Models.User>

@{
    ViewData["Title"] = "Пользователи";
}

<h2>Пользователи:</h2>
<p><a asp-action="Create">Добавить пользователя</a></p>
<table class="table">
    <tr><th>Имя</th></tr>
    @foreach (var item in Model)
    {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="User" asp-route-id="@item.Id">Изменить</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="User" asp-route-id="@item.Id" method="post">
                        <input type="submit" value="Удалить">
                    </form>
                </td>
            </tr>

    }
</table>
